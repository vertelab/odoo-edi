<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_import_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.import.form.inherit</field>
        <field name="model">account.invoice.import</field>
        <field name="inherit_id" ref="account_invoice_import.account_invoice_import_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="inside">
                <group string="Image Processing">
                    <field name="monochrome_threshold" step="1" min="0" max="255"/>
                    <button name="preset_min" type="object" class="oe_inline oe_stat_button" icon="fa-arrow-circle-o-left" string="min" states=""/>
                    <button name="preset_mid" type="object" class="oe_inline oe_stat_button" icon="fa-dot-circle-o" string="mid" states=""/>
                    <button name="preset_max" type="object" class="oe_inline oe_stat_button" icon="fa-arrow-circle-o-right" string="max" states=""/>
                    <field name="ocrlang" widget="radio" options='{"horizontal": true}'/>
                </group>
                <group>
                    <field name="displayed_image" widget="image" options='{"zoom": "image"}' class="ocr_image_widget"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
