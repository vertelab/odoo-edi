<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_import_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.import.form.inherit</field>
        <field name="model">account.invoice.import</field>
        <field name="inherit_id" ref="account_invoice_import.account_invoice_import_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="inside">
                <group string="Image Processing">
                    <field name="monochrome_threshold" widget="slider" step="1" min="0" max="255"/>
                </group>
                <group>
                    <field name="displayed_image" widget="image" options='{"zoom": "image"}' class="ocr_image_widget"/>
                </group>
                <field name="monochrome_threshold" widget="samda_widget"/>
            </xpath>
        </field>
    </record>
</odoo>