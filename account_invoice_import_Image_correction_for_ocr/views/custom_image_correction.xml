<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_import_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.import.form.inherit</field>
        <field name="model">account.invoice.import</field>
        <field name="inherit_id" ref="account_invoice_import.account_invoice_import_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='help-import']" position="inside">
                <group string="Image Processing">
                    <group>
                        <field name="monochrome_threshold" invisible="1"/>
                    </group>
                    <group>
                        <field name="displayed_image" widget="image" options='{"zoom": "image"}'/>
                        <field name="image_slider" widget="slider" options='{"min": 0, "max": 255, "step": 1}'/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>